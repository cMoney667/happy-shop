{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1 class="mt-3 mb-4">Products</h1>
        <div class="row">
            {% for product in products %}
                <div class="col-md-4">
                    <div class="card mb-4">
                        <img src="https://placehold.co/200x150" alt="{{ product.name }}" class="card-img-top">
                        <div class="card-body">
                            <h2 class="card-title h5">{{ product.name }}</h2>
                            <p class="card-text">{{ product.description }}</p>
                            <div class="d-flex justify-content-between align-item-center">
                                <a href="{{ path('app_product_detail', { id: product.id }) }}" class="btn btn-dark">View detail</a>
                                <span class="h5 mt-auto">{{ product.price|format_currency('USD', {rounding_mode: 'floor'}) }}</span>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
